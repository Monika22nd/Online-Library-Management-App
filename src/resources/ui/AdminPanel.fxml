<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Java.controller.AdminController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label text="Admin Panel - Quản lý Hệ thống">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <!-- TAB 1: USER -->
                <Tab text="Quản lý Người dùng (Users)">
                    <content>
                        <VBox spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <TableView fx:id="userTable" VBox.vgrow="ALWAYS" />
                                <HBox spacing="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#handleAddUser" text="Thêm User" />
                                        <Button mnemonicParsing="false" onAction="#handleEditUser" text="Sửa User" />
                                        <Button mnemonicParsing="false" onAction="#handleDeleteUser" style="-fx-text-fill: red;" text="Xóa User" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <!-- TAB 2: BOOKS -->
                <Tab text="Quản lý Sách (Books)">
                    <content>
                        <VBox spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <TableView fx:id="bookTable" VBox.vgrow="ALWAYS" />
                                <HBox spacing="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#handleAddBook" text="Thêm Sách" />
                                        <Button mnemonicParsing="false" onAction="#handleEditBook" text="Sửa Sách" />
                                        <Button mnemonicParsing="false" onAction="#handleDeleteBook" style="-fx-text-fill: red;" text="Xóa Sách" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <!-- TAB 3: LOANS (MỚI) -->
                <Tab text="Quản lý Vé Mượn (Loans)">
                    <content>
                        <VBox spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <TableView fx:id="loanTable" VBox.vgrow="ALWAYS" />
                                <HBox spacing="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#handleRefreshLoans" text="Làm mới danh sách" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <bottom>
        <HBox spacing="10.0" style="-fx-padding: 10;">
            <children>
                <Button mnemonicParsing="false" onAction="#handleBack" text="Quay lại Trang chủ" />
            </children>
        </HBox>
    </bottom>
</BorderPane>