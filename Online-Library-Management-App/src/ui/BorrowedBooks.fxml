<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BorrowedBooksController">
    <top>
        <VBox spacing="6.0">
            <padding>
                <Insets top="10" left="10" right="10" bottom="0"/>
            </padding>
            <children>
                <Label fx:id="titleLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Sách đã mượn (0)" />
            </children>
        </VBox>
    </top>

    <center>
        <ListView fx:id="listView" prefHeight="400.0" prefWidth="800.0" />
    </center>

    <bottom>
        <HBox spacing="8.0" style="-fx-padding:10;">
            <children>
                <Button fx:id="returnBtn" text="Return selected" disable="true" />
                <Button fx:id="backBtn" text="Quay lại" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
