<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController">
    <top>
        <HBox spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <Label text="Admin Panel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </children>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5">
            <items>
                <VBox spacing="8.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>
                    <children>
                        <Label text="Users" />
                        <TableView fx:id="userTable" prefHeight="400.0">
                            </TableView>
                        <HBox spacing="8.0">
                            <children>
                                <Button text="Add User" onAction="#handleAddUser" />
                                <Button text="Edit User" onAction="#handleEditUser" />
                                <Button text="Delete User" onAction="#handleDeleteUser" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="8.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>
                    <children>
                        <Label text="Books" />
                        <TableView fx:id="bookTable" prefHeight="400">
                            </TableView>
                        <HBox spacing="8.0">
                            <children>
                                <Button text="Add Book" onAction="#handleAddBook" />
                                <Button text="Edit Book" onAction="#handleEditBook" />
                                <Button text="Delete Book" onAction="#handleDeleteBook" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="8.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <Button text="Back" onAction="#handleBack" />
            </children>
        </HBox>
    </bottom>
</BorderPane>