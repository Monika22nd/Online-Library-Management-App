<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Java.controller.LoginController">
   <children>
      <PasswordField fx:id="passwordField" layoutX="226.0" layoutY="231.0" />
      <TextField fx:id="usernameField" layoutX="226.0" layoutY="188.0" />
      <Label layoutX="161.0" layoutY="192.0" text="Username" />
      <Label layoutX="161.0" layoutY="235.0" text="Password" />
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="192.0" layoutY="48.0" prefHeight="125.0" prefWidth="216.0" text="Log In" textAlignment="CENTER">
         <font>
            <Font size="67.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" layoutX="275.0" layoutY="284.0" mnemonicParsing="false" onAction="#handleLoginButton" text="Login" />
      <Label layoutX="161.0" layoutY="329.0" text="Don't have an account?" />
      <Hyperlink fx:id="registerLink" layoutX="346.0" layoutY="326.0" onAction="#handleLinkClicked" text="Register" />
   </children>
</AnchorPane>
